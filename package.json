{
  "name": "scheduling-is-hard",
  "version": "1.0.0",
  "scripts": {
    "generate-types":    "openapi-typescript ./schemas/api.yaml -o ./types/api.d.ts",
    "cf-typegen":        "wrangler types ./types/worker-configuration.d.ts",
    "check":             "tsc && vite build && wrangler deploy --dry-run",
    "build":             "tsc -b && vite build --mode staging    && npm run render-api-docs",
    "deploy-preview":    "tsc -b && vite build --mode staging    && npm run render-api-docs && wrangler versions upload --preview-alias $(echo $WORKERS_CI_BRANCH | tr '[:upper:]' '[:lower:]' | tr -cd '[:alnum:]')",
    "deploy-staging":    "tsc -b && vite build --mode staging    && npm run render-api-docs && wrangler deploy",
    "deploy-production": "tsc -b && vite build --mode production && npm run render-api-docs && wrangler deploy",
    "dev":               "vite",
    "preview":           "npm run build && vite preview",
    "lint":              "prettier ./src --write",
    "lint-openapi":      "npx @redocly/cli lint ./schemas/api.yaml",
    "preview-openapi":   "npx @redocly/cli preview-docs -p 8888 ./schemas/api.yaml",
    "render-api-docs":   "node_modules/.bin/api2html -o ./dist/api.html -l shell,javascript--nodejs ./schemas/api.yaml"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "hono": "^4.7.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.8.0",
    "react-turnstile": "^1.1.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.10.1",
    "@redocly/cli": "^1.34.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.7.0",
    "api2html": "^0.4.0",
    "globals": "^16.3.0",
    "openapi-typescript": "^7.7.1",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vite": "^7.0.6",
    "wrangler": "4.26.0"
  },
  "type": "module"
}
